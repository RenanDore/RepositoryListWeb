{
  "compilerOptions": {
    "lib": ["dom", "dom.Iterable", "esnext"],
    "allowJs": true, // Entende que posso usar JS ou TSX
    "jsx": "react-jsx", // Entende que estou usando HTML dentro do TSX
    "noEmit": true,
    "strict": true, // Modo de lidar com errors
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"] // Onde o codigo da nossa aplicacao vai estar (dentro de src)
}
